{
    "family": "my-task-definition",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::123456789012:role/myTaskRole",
    "containerDefinitions": [
        {
            "name": "my-container",
            "image": "my-container-image:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "ENV_VAR_NAME",
                    "value": "ENV_VAR_VALUE"
                }
            ],
            "secrets": [
                {
                    "name": "SECRET_NAME",
                    "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:SECRET_NAME-AbCdEf"
                }
            ]
        }
    ]
}
